{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"noImplicitAny": false,
		"types": ["@types/node", "@prisma/client"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
